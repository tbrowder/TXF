use Test;
use TXF;
use TXF::IRS-Forms;

my $o;
# assign values to be used for all class attrs
my $id  = 'a';
my $llx = 0;
my $lly = 0;
my $urx = 0;
my $ury = 0;
my $w   = 3;
my $h   = 4;

# object should die during construction if required attrs aren't provided
dies-ok {$o = Row.new: :$lly;};
dies-ok {$o.lly == $lly;};
dies-ok {$o.h == $h;};


$o = Row.new: :$id, :$lly, :$h;
is $o.ury, 4;
is $o.h, 4;

$ury = 2;
$h   = 3;
$o = Row.new: :$id, :$lly, :$ury, :$h;
is $o.h, 3;


done-testing;
